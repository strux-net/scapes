if [ "$1" = "-version" ] ; then
  echo "Version :"
  echo "  L.shTR	3.0"
  exit 0
fi
# based on L.shTR , version : 3.0

usage()
{
  cat <<'EOU' >&2
usage : L [<file>]
opens a powerful directory-browser for a given set of files.

if no file is given then STDIN is read.
file should contain nothing but filenames.
Each on a line of it's own.
OPTIONS:
  -version	show version information
EOU
  exit 1
}
main()
{
  if [ $# -eq 1 -a "$1" = '-?' ] ; then
    usage
  fi
  if [ $# -eq 0 ] ; then
    vim -N +"set nomodified" +"L" -  +only
  elif [ $# -eq 1 ] ; then
    vim -N +"set nomodified" +"L" $1 +only
  else
    usage
  fi
}
main "$@"
