# Autogenerated makefile
# by :
#   m_tru mTR >makefile
#
m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  truerItem\

install install_ALL:\
  install_truerItem\

test test_ALL:\
  test_truerItem\

logged_build:
	-@${MAKE} --no-print-directory test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=find lines that are matched by a specific item of a specific truer
install_truerItem:
	@echo  installing truerItem
	@${m_copy} truerItem ok/truerItem
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} truerItem ~/strux/bin/truerItem
test_truerItem: truerItem
	@echo  testing truerItem
	-./truerItem -invalidOption
	./truerItem -f invalid sh_tru truerItem.shTR
	./truerItem -f actionlist sh_tru truerItem.shTR
	./truerItem sh_tru opt truerItem.shTR
	./truerItem -h sh_tru opt truerItem.shTR
	./truerItem -a '$$.\t$$_' sh_tru opt truerItem.shTR
	./truerItem -e -a '$$goal\t$$Title' m_tru goal mTR
.PHONY: truerItem
truerItem:
	@echo  building truerItem
	sh_tru truerItem.shTR >truerItem
	@${m_diff} truerItem
	chmod +x truerItem
	{ echo "truerItem\n  find lines that are matched by a specific item of a specific truer\n    usage"; ./truerItem -? 2>&1 | i -it 1 ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tfind lines that are matched by a specific item of a specific truer" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
