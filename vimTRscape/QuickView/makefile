m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  QuickView.vim\

install install_ALL:\
  install_QuickView.vim\

test test_ALL:\
  test_QuickView.vim\

logged_build:
	-@${MAKE} --no-print-directory ALL test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=quick-view local settings
install_QuickView.vim:
	@echo  installing QuickView.vim
	@${m_copy} QuickView.vim ok/QuickView.vim
	@${m_copy} QuickView.vim ~/.vim/plugin/
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} docs/QuickView-commands.txt ok/docs/QuickView-commands.txt
	vim -u NONE -c 'helptags ~/.vim/doc' -c q
test_QuickView.vim: QuickView.vim
	@: # an empty action. To avoid nothing to be done for test_whatever
.PHONY: QuickView.vim
QuickView.vim:
	@echo  building QuickView.vim
	vim_tru QuickView.vimTR >QuickView.vim
	@${m_diff} QuickView.vim
	{ echo "QuickView.vim\n  quick-view local settings\n    usage"; < QuickView.vim perl -na -e 'if ($$seq = (/^"usage for / .. /"--/) and $$seq !~ /E0/ and $$seq>1) { s/.//;s/^\s+$$/\n/;print }' ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tquick-view local settings" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
	Title="*QuickView.txt*   quick-view local settings" vimInterface2Help_tru QuickView.vimTR >docs/QuickView-commands.txt
	@${m_diff} docs/QuickView-commands.txt
