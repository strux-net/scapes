m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  ZoomFont.vim\

install install_ALL:\
  install_ZoomFont.vim\

test test_ALL:\
  test_ZoomFont.vim\

logged_build:
	-@${MAKE} --no-print-directory test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=(un-)zoom fontsize
install_ZoomFont.vim:
	@echo  installing ZoomFont.vim
	@${m_copy} ZoomFont.vim ok/ZoomFont.vim
	@${m_copy} ZoomFont.vim ~/.vim/plugin/
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} docs/ZoomFont-commands.txt ok/docs/ZoomFont-commands.txt
	vim -u NONE -c 'helptags ~/.vim/doc' -c q
test_ZoomFont.vim: ZoomFont.vim
	@echo  testing ZoomFont.vim
.PHONY: ZoomFont.vim
ZoomFont.vim:
	@echo  building ZoomFont.vim
	vim_tru ZoomFont.vimTR >ZoomFont.vim
	@${m_diff} ZoomFont.vim
	{ echo "ZoomFont.vim\n  (un-)zoom fontsize\n    usage"; < ZoomFont.vim perl -na -e 'if ($$seq = (/^"usage for / .. /"--/) and $$seq !~ /E0/ and $$seq>1) { s/.//;s/^\s+$$/\n/;print }' ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\t(un-)zoom fontsize" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
	Title="*ZoomFont.txt*   (un-)zoom fontsize" vimInterface2Help_tru ZoomFont.vimTR >docs/ZoomFont-commands.txt
	@${m_diff} docs/ZoomFont-commands.txt
