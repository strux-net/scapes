#   m_tru mTR >makefile
#
m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  java_tru\

install install_ALL:\
  install_java_tru\

test test_ALL:\
  test_java_tru\

logged_build:
	-@${MAKE} --no-print-directory ALL test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=convert .javaTR to .java
install_java_tru:
	@echo  installing java_tru
	@${m_copy} statistics.out ok/statistics.out
	@${m_copy} java_tru ok/java_tru
	@${m_copy} TestGui.java ok/TestGui.java
	@${m_copy} Queries.java ok/Queries.java
	@${m_copy} test.java ok/test.java
	@${m_copy} test_with_debug.java ok/test_with_debug.java
	@${m_copy} fulltest.java ok/fulltest.java
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} docs/java_tru.html ok/docs/java_tru.html
	@${m_copy} java_tru ~/strux/bin/java_tru
test_java_tru: java_tru
	@echo  testing java_tru
	perl java_tru                    TestGui.javaTR >TestGui.java
	@${m_diff} TestGui.java
	perl java_tru                    Queries.javaTR >Queries.java
	@${m_diff} Queries.java
	perl java_tru                    test.javaTR >test.java
	@${m_diff} test.java
	perl java_tru -GenerateDebugInfo test.javaTR >test_with_debug.java
	@${m_diff} test_with_debug.java
	perl java_tru -GenerateDebugInfo fulltest.javaTR >fulltest.java
	@${m_diff} fulltest.java
	-perl java_tru --help
.PHONY: java_tru
java_tru:
	@echo  building java_tru
	tru -s statistics.out ../common.tru ../morecommon.tru ../statementDelimiter.tru ../plainvar.tru java.tru java_sql.tru ../c_like_vars.tru javacoll.tru ../../lib/basicUSAGE.tru >java_tru
	chmod +x java_tru # this is needed for trudocGivesCheck, else it finds the truer somewhere else
	PATH=$$PWD:$$PATH perl ~/bin/trudocGivesCheck -s java java_tru >java_tru.tmp
	mv java_tru.tmp java_tru
	chmod +x java_tru
	@${m_diff} statistics.out
	@${m_diff} java_tru
	{ echo "java_tru\n  convert .javaTR to .java\n    usage"; ./java_tru -? 2>&1 | i -it 1 ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tconvert .javaTR to .java" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
	trudoc_tru ./java_tru >docs/java_tru.html
	@${m_diff} docs/java_tru.html
