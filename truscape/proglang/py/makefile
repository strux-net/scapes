# Autogenerated makefile
# by :
#   m_tru mTR >makefile
#
m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  py_tru\

install install_ALL:\
  install_py_tru\

test test_ALL:\
  test_py_tru\

logged_build:
	-@${MAKE} -B --no-print-directory ALL test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=convert .pyTR to .py
install_py_tru:
	@echo  installing py_tru
	@${m_copy} statistics.out ok/statistics.out
	@${m_copy} py_tru ok/py_tru
	@${m_copy} py_tru ~/strux/bin/py_tru
	@${m_copy} pytest.py ok/pytest.py
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} docs/py_tru.html ok/docs/py_tru.html
test_py_tru: py_tru
	@echo  testing py_tru
	./py_tru -allowP pytest.pyTR >pytest.py
	@${m_diff} pytest.py
py_tru:
	@echo  building py_tru
	tru -s statistics.out ../common.tru ../morecommon.tru ../plainvar.tru py.tru pycoll.tru ../../lib/basicUSAGE.tru >py_tru
	chmod +x py_tru # this is needed for trudocGivesCheck, else it finds the truer somewhere else
	PATH=$$PWD:$$PATH perl ~/bin/trudocGivesCheck -s py ./py_tru >py_tru.tmp
	mv py_tru.tmp py_tru
	chmod +x py_tru
	@${m_diff} statistics.out
	@${m_diff} py_tru
	{ echo "py_tru\n  convert .pyTR to .py\n    usage"; ./py_tru -? 2>&1 | i -it 1 ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tconvert .pyTR to .py" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
	trudoc_tru ./py_tru >docs/py_tru.html
	@${m_diff} docs/py_tru.html
