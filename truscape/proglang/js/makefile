# Autogenerated makefile
# by :
#   m_tru mTR >makefile
#
m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  js_tru\

install install_ALL:\
  install_js_tru\

test test_ALL:\
  test_js_tru\

logged_build:
	-@${MAKE} --no-print-directory ALL test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=convert .jsTR to .js
install_js_tru:
	@echo  installing js_tru
	@${m_copy} statistics.out ok/statistics.out
	@${m_copy} js_tru ok/js_tru
	@${m_copy} js_tru ~/strux/bin/js_tru
	@${m_copy} jstest.js ok/jstest.js
	@${m_copy} statistics.out ok/statistics.out
	@${m_copy} js_tru ok/js_tru
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} docs/js_tru.html ok/docs/js_tru.html
test_js_tru: js_tru
	@echo  testing js_tru
	./js_tru -allowP jstest.jsTR >jstest.js
	@${m_diff} jstest.js
	@${m_diff} statistics.out
	@${m_diff} js_tru
.PHONY: js_tru
js_tru:
	@echo  building js_tru
	tru -s statistics.out ../common.tru ../morecommon.tru ../statementDelimiter.tru ../plainvar.tru js.tru ../c_like_vars.tru jscoll.tru ../../lib/basicUSAGE.tru >js_tru
	chmod +x js_tru # this is needed for trudocGivesCheck, else it finds the truer somewhere else
	PATH=$$PWD:$$PATH perl ~/bin/trudocGivesCheck -s js js_tru >js_tru.tmp
	mv js_tru.tmp js_tru
	chmod +x js_tru
	@${m_diff} statistics.out
	@${m_diff} js_tru
	{ echo "js_tru\n  convert .jsTR to .js\n    usage"; ./js_tru -? 2>&1 | i -it 1 ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tconvert .jsTR to .js" ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
	trudoc_tru ./js_tru >docs/js_tru.html
	@${m_diff} docs/js_tru.html
