m_diff=bash -c 'if ! diff -a -q $$1 ok/$$1 >/dev/null ; then echo -e "BAD\t$$1\tok/$$1" ; else echo -e "GOOD\t$$1" ; fi ; ' m_diff
m_copy=bash -c 'if ! diff -a -q $$1 $$2    >/dev/null ; then echo copying $$1 $$2; cp -p $$1 $$2 ; fi ; ' m_copy
ALL:\
  ijoin\

install install_ALL:\
  install_ijoin\

test test_ALL:\
  test_ijoin\

logged_build:
	-@${MAKE} --no-print-directory test_ALL 2>&1 | perl -pe 's,$$ENV{HOME}/,~/,g' >m.log # substitute /home/username with ~  (to avoid test-fails for trivial reasons)
	@${m_diff} m.log
confirmed_install: confirm install
confirm:
	@bash -c 'read -p "really install ? (^C) if not"'
export Title=join lines with their (indent-) parents.
install_ijoin:
	@echo  installing ijoin
	@${m_copy} ijoin ok/ijoin
	@${m_copy} statistics.out ok/statistics.out
	@${m_copy} nodel ok/nodel
	@${m_copy} delim ok/delim
	@${m_copy} docs/README.txt ok/docs/README.txt
	@${m_copy} docs/README.html ok/docs/README.html
	@${m_copy} ijoin ~/strux/bin/ijoin
test_ijoin: ijoin
	@echo  testing ijoin
	./ijoin test >nodel
	@${m_diff} nodel
	./ijoin -j / test >delim
	@${m_diff} delim
.PHONY: ijoin
ijoin:
	@echo  building ijoin
	tru -s statistics.out ijoin.tru >ijoin
	@${m_diff} ijoin
	@${m_diff} statistics.out
	chmod +x ijoin
	{ echo "ijoin\n  join lines with their (indent-) parents.\n    usage"; ./ijoin -? 2>&1 | i -it 1 ; } >docs/README.txt
	@${m_diff} docs/README.txt
	{ sed "s/^    usage$$/    code/" docs/README.txt ; echo "style\n  Title\tjoin lines with their (indent-) parents." ; } | html_tru >docs/README.html
	@${m_diff} docs/README.html
